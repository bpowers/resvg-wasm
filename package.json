{
  "name": "resvg-wasm",
  "version": "0.3.2",
  "description": "SVG renderer using resvg as a WebAssembly module",
  "repository": "https://github.com/bpowers/resvg-wasm",
  "author": {
    "name": "Bobby Powers",
    "email": "bobbypowers@gmail.com"
  },
  "license": "MPL-2.0",
  "main": "lib",
  "browser": "lib.browser",
  "exports": {
    ".": {
      "module": "./lib.browser/index.js",
      "node": "./lib/index.js"
    },
    "./*": {
      "module": "./lib.browser/*.js",
      "node": "./lib/*.js"
    },
    "./core/*": {
      "module": "./lib.browser/core/*.js",
      "node": "./lib/core/*.js"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.0.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "needs-format": "prettier -l '*.ts'",
    "format": "prettier --write '*.ts'",
    "lint": "eslint '*.ts'",
    "prepublishOnly": "yarn build",
    "clean": "rm -rf ./lib ./lib.browser",
    "build": "./build.sh"
  }
}
